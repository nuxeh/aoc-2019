(define (navigate cmd acc)
;  (display "[")
;  (display cmd)
;  (display "] ")
  (let ((pos (last acc)))
    (let ((x (string->number (string-copy cmd 1))))
      (let ((d (string-copy cmd 0 1)))
        (if (string=? d "U")
          (do ((i 1 (1+ i))) ((> i x))
            (append! acc (list (cons (car pos) (+ i (cdr pos)))))))
        (if (string=? d "D")
          (do ((i 1 (1+ i))) ((> i x))
            (append! acc (list (cons (car pos) (- (cdr pos) i))))))
        (if (string=? d "L")
          (do ((i 1 (1+ i))) ((> i x))
            (append! acc (list (cons (- (car pos) i) (cdr pos))))))
        (if (string=? d "R")
          (do ((i 1 (1+ i))) ((> i x))
            (append! acc (list (cons (+ i (car pos)) (cdr pos))))))
;        (display acc)
;        (newline)
        acc))))

